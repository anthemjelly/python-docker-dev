{
  "venvPath": ".",  // 容器内的虚拟环境路径（你的项目目录）
  "venv": "venv",
  "pythonVersion": "3.12",  // 和你的Docker镜像一致
  "strict": [],  // 新手先关严格模式，避免太多无关提示
  "reportMissingTypeStubs": false,  // 忽略「缺少类型库」的提示
  "exclude": [".ruff_cache", "venv", "__pycache__"]  // 排除缓存目录
  "reportMissingImports": true,
  "reportGeneralTypeIssues": true
}
